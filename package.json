{
    "name": "flowcapture",
    "private": true,
    "type": "module",
    "scripts": {
        "knip": "knip",
        "prepare": "husky && npm run sort-package-json",
        "prettier": "prettier --write .",
        "sort-package-json": "sort-package-json",
        "start": "dotenvx run -- tsx --inspect src/main.ts",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "lint-staged": {
        "*": [
            "eslint --ext .ts --fix --max-warnings=0 --no-warn-ignored",
            "prettier --write --ignore-unknown"
        ]
    },
    "dependencies": {
        "@dotenvx/dotenvx": "^1.51.1",
        "@tsconfig/node-lts": "^22.0.2",
        "@tsconfig/strictest": "^2.0.7",
        "sort-package-json": "^3.4.0",
        "tsx": "^4.20.6"
    },
    "devDependencies": {
        "@eslint/js": "^9.39.1",
        "eslint": "^9.39.1",
        "globals": "^16.5.0",
        "husky": "^9.1.7",
        "knip": "^5.68.0",
        "lint-staged": "^16.2.6",
        "npm-check-updates": "^19.1.2",
        "prettier": "^3.6.2",
        "prettier-plugin-organize-imports": "^4.3.0",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.46.3"
    }
}
